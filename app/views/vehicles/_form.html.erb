 
<%= form_with(model: vehicle, local: true) do |form| %>
  <% if vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if @vehicle.user == current_user %>    
    <div class="col l6 field">
       <%= form.label :type_vehicle_id %>
       <%= form.select 'type_vehicle_id', options_from_collection_for_select(@vehicle.typeVehicle, 'id', 'description'), id: 'ty' %>

      <br/>
      <br/>
       <div class="black-text text-lighten-3"> 
         Marca
        </div>
      <%= form.text_field :brand %>

      <br/>
      <br/>
       <div class="black-text text-lighten-3"> 
          Modello
        </div>
      <%= form.text_field :model %>

      <br/>
      <br/>
       <div class="black-text text-lighten-3"> 
          Motore
        </div>
      <%= form.text_field :motor %>

      <br/>
      <br/>
       <div class="black-text text-lighten-3"> 
          Colore 
        </div>
      <%= form.text_field :colour %>
    </div>

    <div class="col l6 field">
      <% if !@vehicle.photo_1.nil? %>
        <% if @vehicle.photo_1.url != "/images/original/missing.png" %>
          <%=  image_tag @vehicle.photo_1.url %>
        <% end %> 
      <% end %>
      <br/>
      <%= form.label :photo_1 %>Seleziona la foto
      <br/>
      <%= form.file_field :photo_1 %>

      <br/>
      <br/>

      <% if !@vehicle.photo_2.nil? %>
        <% if @vehicle.photo_2.url != "/images/original/missing.png" %>
          <%=  image_tag @vehicle.photo_2.url %>
        <% end %> 
      <% end %>
      <br/>
      <%= form.label :photo_2 %>Seleziona la foto
      <br/>
      <%= form.file_field :photo_2 %>

    </div>

    <div class="actions">
      <%= form.submit "Salva" , class:"waves-effect waves-light btn btn-devise" %>
    </div>
  <% end %>
  
<% end %>
