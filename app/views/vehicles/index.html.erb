<p id="notice"><%= notice %></p>
<div class="row">   
  <div class="col l6 offset-l3 form">
    <h4>Descrizione del veicolo</h4>
    <% if @vehicle.nil? %>
      <div class="col  offset-l2">        
        <br/>
        <%= link_to 'Inserisci veicolo', new_vehicle_path %>
      </div>
    <% else %>
      <% if @vehicle.user == current_user %>

        <div class="col l6  field">
          <%= label_tag 'Tipo veicolo', nil %>
          <br/>
          <% if !@vehicle.typeVehicle.nil? %>
            <% @vehicle.typeVehicle.each do |v| %>
              <% if v.id == @vehicle.type_vehicle_id %>
                <p class="testi-show">
                  <%= v.description %>
                </p>  
              <% end %>
            <% end %> 
          <% end %>                
        </div >

        <div class="field">
          <%= label_tag 'Foto 1', nil %>
          <br/>

          
          <% if @vehicle.nil? %>
            <%=  image_tag @vehicle.photo_1.url %>
          <% end %>        
        </div>

        <div class="col l6  field">
          <%= label_tag 'Marca', nil %>
          <br/>
          <p class="testi-show"><%= @vehicle.brand %></p>
        </div >

        <div class="col l6  field">
          <%= label_tag 'Modello', nil %>
          <br/>
          <p class="testi-show"><%= @vehicle.model %></p>
        </div >

        <div class="col l6  field">
          <%= label_tag 'Motore', nil %>
          <br/>
          <p class="testi-show"><%= @vehicle.motor %></p>
        </div >

        <div class="col l6  field">
          <%= label_tag 'Colore', nil %>
          <br/>
          <p class="testi-show"><%= @vehicle.colour %></p>
        </div >


      <% end %>
    <% end %>

  </div>
</div>
  
