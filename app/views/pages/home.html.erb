<div class="row row-home">
        
	<div class="col l9 offset-l1">
		<%= form_tag search_result_path_offers_path, :method => 'get' do %>
		
		<div class="col l3 field label-custom">
			<%= label(:partenza , 'Partenza', '',class:"label-custom" )%> 	 
	    	<%= text_field_tag :departure, params[:departure] %>   
	    </div>

	    <div class="col l3 field">
	      <%= label(:arrivo , 'Arrivo', '', class:"label-custom")%>
	      <%= text_field_tag :arrive, params[:arrive] %> 
	    </div>

	    <div class="col l3 field">
			<%= label(:data_di_partenza, 'Data di partenza', '', class:"label-custom") %>
	      	<%= date_select( "date_departure" ,:date_departure ) %> 
	    </div>
        
        <div class="col l3 field">
			<%= label( :ora_di_partenza, 'Ora di partenza', '' , class:"label-custom") %>
			<%= date_select( "date_arrive" ,:date_arrive) %> 
	    </div>

	    <div class="col l3 field">
	    	<%= label(:nr_posti , 'Nr posti', '', class:"label-custom") %>
	     	<%= text_field_tag :max_available, params[:max_available] %> 
	    </div>
       	
       	<div class="col l3 field">
	     	<%= label(:prezzo_max, 'Prezzo max', '' , class:"label-custom") %>
	     	<%= text_field_tag :price_max, params[:price_max] %> 
	    </div>

       	<div class="col l3 field">
			<%= label( :prezzo_min , 'Prezzo min', '', class:"label-custom") %>	     
			<%= text_field_tag :price_min, params[:price_min] %> 
	    </div>
       	<br/>
       	
        <div class="actions" >
        	 
		      <%= submit_tag "Cerca" , class:"waves-effect waves-light btn btn-devise" %>
		 
	    
	</div>
      <% end -%>
	</div>
</div>