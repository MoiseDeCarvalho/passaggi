<%= form_with(model: message, local: true) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
        <h5>Viaggio <%= request.params["departure"] + ' ' + request.params["arrive"] %></h5>
        <br/>
        <h6>Data di partenza: <%= request.params["date_departure"] %></h6>
        <br/>
        <h6>Data di arrivo: <%= request.params["date_arrive"] %></h6>
      </div>

  <div class="field">
    <%= form.label :title, class:"label-custom" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :message, class:"label-custom" %>
    <%= form.text_field :message %>
  </div>

  
  <%= form.hidden_field :user_id, :value => current_user.id %>
  <%= form.hidden_field :dest_user_id, :value => @path.user_id %>
  <%= form.hidden_field :sender_name, :value => @sender.name %>
  <%= form.hidden_field :receiver_name, :value => @receiver.name %>
  <%= form.hidden_field :path_offer_id, :value => request.params[:path_offer_id] %>


  <div class="actions">
    <%= form.submit "Invia" , class:"waves-effect waves-light btn btn-devise" %>
  </div>
<% end %>
