<p id="notice"><%= notice %></p>
<div class="row row-home">
  <div class="col l8 offset-l2 white">
    <h4>Messaggi inviati</h4>

    <table>
      <thead>
        <tr>
          <th>Destinatario</th>
          <th>Titolo</th>
          <th>Messaggio</th>
          <th>Azione</th>
        </tr>
      </thead>

      <tbody> 
        <% @messages.each do |message| %>
          <tr>
            <td> 
              <% @profiles.each do |profile| %>  
                <% if profile.user_id.to_i == message.dest_user_id.to_i %>
                  <a href="/profiles?id=<%=profile.user_id%>"><%= profile.name %></a>
                <% end %>
              <% end %> 
              </td>
            <td><%= message.title %></td>
            <td><%= message.message %></td>
            <td> <button onclick="leggiMessaggio(<%= message.id %>,)" class="waves-effect waves-light btn btn-devise">Leggi</button>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="center">
      <%= will_paginate @messages %>
    </div>  
  </div>
</div>

<script>
  
  function leggiMessaggio(id){
    window.location.href = '/messages/' + id ;    
  }



</script>