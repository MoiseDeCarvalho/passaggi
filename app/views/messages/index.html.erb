<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col l8 offset-l2">
    <h4>Messaggi inviati</h4>

    <table>
      <thead>
        <tr>
          <th>Mittente</th>
          <th>Destinatario</th>
          <th>Titolo</th>
          <th>Messaggio</th>
          <th>Rispondi</th>
          <th>Azione</th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.user_id %></td>
            <td><%= message.dest_user_id %></td>
            <td><%= message.title %></td>
            <td><%= message.message %></td>
            <td><a href="/messages/<%= message.id%>">Leggi</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="center">
      <%= will_paginate @messages %>
    </div>  
  </div>
</div>

