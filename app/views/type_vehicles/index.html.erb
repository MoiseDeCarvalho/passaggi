<h1>Type Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>    
    <% @type_vehicles.each do |type_vehicle| %>
      <tr>
        <td><%= type_vehicle.description %></td>
        <td><%= link_to 'Show', type_vehicle %><i class="material-icons left">description</i></td>
        <td><%= link_to 'Edit', edit_type_vehicle_path(type_vehicle) %><i class="material-icons left">edit</i></td>
        <td><%= link_to 'Destroy', type_vehicle, method: :delete, data: { confirm: 'Are you sure?' } %><i class="material-icons left">delete</i></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo Type Vehicle', new_type_vehicle_path %><i class="material-icons left">add</i>
