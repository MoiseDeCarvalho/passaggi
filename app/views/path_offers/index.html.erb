<p id="notice"><%= notice %></p>

<div class="row">
  <h4 class="center">Passaggi offerti</h4>
  <% if !@path_offers.nil? %>
    <table> 
      <thead>
        <tr>
          <th>Automezzo</th>
          <th>User</th>
          <th>Partenza</th>
          <th>Arrivo</th>
          <th>Data di partenza</th>
          <th>Data di arrivo</th>
          <th>Prezzo</th>
          <th>Nr posti</th>
          <th>Nr prenotati</th>
          <th>Completo</th>
          <th colspan="3"></th>
        </tr>
      </thead>
 
       <tbody>
        <% @path_offers.each do |path_offer| %>
          <tr>
            <td>
              <%=  @typeVehicle.description  + " " + @vehicle.model%>
              <% if !@vehicle.typeVehicle.nil? %>
                <% @vehicle.typeVehicle.each do |v| %>
                  <% if v.id == path_offer.vehicle_id  %>
                    <p class="testi-show">
                      <%= v.description %>
                    </p>  
                  <% end %>
                <% end %> 
              <% end %>

              <%= path_offer.vehicle_id %></td>
            <td><%= path_offer.user_id %></td>
            <td><%= path_offer.departure %></td>
            <td><%= path_offer.arrive %></td>
            <td><%= path_offer.date_departure %></td>
            <td><%= path_offer.date_arrive %></td>
            <td><%= path_offer.price %></td>
            <td><%= path_offer.max_available %></td>
            <td><%= path_offer.booked %></td>
            <td><%= path_offer.full %></td>
            <td><%= link_to 'Modifica', edit_path_offer_path(path_offer) %><i class="material-icons left">edit</i></td>
            <td><%= link_to 'Cancella', path_offer, method: :delete, data: { confirm: 'Are you sure?' } %><i class="material-icons left">delete</i></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 
    <br>

    <ul class="pagination">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="active"><a href="#!">1</a></li>
    <li class="waves-effect"><a href="#!">2</a></li>
    <li class="waves-effect"><a href="#!">3</a></li>
    <li class="waves-effect"><a href="#!">4</a></li>
    <li class="waves-effect"><a href="#!">5</a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>
 
  <% end %>
    <%= link_to 'Nuovo Path Offer', new_path_offer_path %><i class="material-icons left">add</i>
</div>



