<div class="row">
	<div class="col l9 offset-l1">
		<%= form_tag search_result_path_offers_path, :method => 'get' do %>
		
		<div class="col l3 field">
	      <%= label_tag :Partenza %>
	      <%= text_field_tag :departure, params[:departure] %> 
	    </div>

	    <div class="col l3 field">
	      <%= label_tag :Arrivo %>
	      <%= text_field_tag :arrive, params[:arrive] %> 
	    </div>

	    <div class="col l3 field">
	      <%= label_tag :data_di_partenza %>
	      <%= date_select( "date_departure" ,:date_departure ) %> 
	    </div>
         <div class="col l3 field">
	      <%= label_tag :data_di_arrivo%>
	      <%= date_select( "date_departure" ,:date_arrive) %> 
	    </div>

	    <div class="col l3 field">
	      <%= label_tag :Nr_Posti %>
	      <%= text_field_tag :max_available, params[:max_available] %> 
	    </div>
       <div class="col l3 field">
	      <%= label_tag :Prezzo %>
	      <%= text_field_tag :price, params[:price] %> 
	    </div>
	    <div class="col l3 field">
	      <%= label_tag :Prenotato %>
	      <%= radio_button_tag :booked, params[:booked] %> 
	    </div>
	    <div class="col l3 field">
	      <%= label_tag :Disponibile %>
	      <%= radio_button_tag :full, params[:full] %> 
	    </div>
       	<br/>
        <div class="actions">
		      <%= submit_tag "Cerca" , class:"waves-effect waves-light btn btn-devise" %>
	    </div>
      <% end %>
	</div>
</div>

 