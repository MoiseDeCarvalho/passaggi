<div class="row">
	<div class="col l9 offset-l1">
		<%= form_tag search_result_path_offers_path, :method => 'get' do %>
		<div class="col l3 field">
	       <%= form.label :partenza , class:"label-custom"%>
	      <%= text_field_tag :departure, params[:departure] %> 
	    </div>

	    <div class="col l3 field">
	       <%= form.label :Arrivo , class:"label-custom"%>
	      <%= text_field_tag :arrive, params[:arrive] %> 
	    </div>

	    <div class="col l3 field">
	       <%= form.label :data_di_partenza , class:"label-custom"%>
	      <%= date_select( "date_departure" ,:date_departure ) %> 
	    </div>
        
        <div class="col l3 field">
	       <%= form.label :data_di_arrivo, class:"label-custom"%>
	      <%= date_select( "date_arrive" ,:date_arrive) %> 
	    </div>

	    <div class="col l3 field">
	       <%= form.label :nr_posti , class:"label-custom"%>
	      <%= text_field_tag :max_available, params[:max_available] %> 
	    </div>
       	
       	<div class="col l3 field">
	       <%= form.label :prezzo_massimo , class:"label-custom"%>
	      <%= text_field_tag :price_max, params[:price_max] %> 
	    </div>
       	<div class="col l3 field">
	       <%= form.label :prezzo_minimo, class:"label-custom"%>
	      <%= text_field_tag :price_min, params[:price_min] %> 
	    </div>
	    <div class="col l3 field">
	     <%= form.label :veicolo , class:"label-custom"%>
       <%= select_tag :type_vehicle_id, options_from_collection_for_select(@vehicles, 'id', 'description'), id: 'ty' %>
   </div>
       	<br/>
        <div class="actions">
		      <%= submit_tag "Cerca" , class:"waves-effect waves-light btn btn-devise" %>
	    </div>
      <% end %>
	</div>
</div>

 