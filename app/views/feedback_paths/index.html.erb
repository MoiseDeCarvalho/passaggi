<p id="notice"><%= notice %></p>

<h1>Feedback Paths</h1>
<% if !@feedback_path.nil? %>    
<table class="striped highlight centered">
  <thead>
    <tr>
      <th>User</th>
      <th>Path offers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feedback_paths.each do |feedback_path| %>
      <tr>
        <td><%= feedback_path.user_id %></td>
        <td><%= feedback_path.path_offers_id %></td>
        <td><%= link_to 'Mostra', feedback_path %><i class="material-icons left">description</i></td>
        <td><%= link_to 'Modifica', edit_feedback_path_path(feedback_path) %><i class="material-icons left">edit</i></td>
        <td><%= link_to 'Cancella', feedback_path, method: :delete, data: { confirm: 'Are you sure?' } %><i class="material-icons left">delete</i></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'Nuovo Feedback Path', new_feedback_path_path %><i class="material-icons left">add</i>
