<div class="col l6 offset-l3">
  <%= form_with(model: feedback, local: true) do |form| %>
    <% if feedback.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

        <ul>
          <% feedback.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <% if !request.params[:departure].nil? %>
        <% title = request.params[:departure] + ' - ' + request.params[:arrive]   %>
    <% end %>

    <h5>Viaggio da <%= title %></h5>

    <div class="field">
      <%= form.text_field :title, :value => title %>
    </div>
    

    
    <div class="field">
       <%= form.label :descrivi_il_viaggio , class:"label-custom"%>
      <%= form.text_area :feedback %>
    </div>
   
        
     
    <div class="field">
       <%= form.label :indica_un_punteggio , class:"label-custom"%>
      <%= form.select :score, options_for_select((1..5).step(1)), id: "score" %>
    </div>

    <%= form.hidden_field :path_offer_id, value:request.params[:path_offer_id]  %>
    <div class="actions">
      <%= form.submit "Salva", class:"waves-effect waves-light btn btn-devise" %>
    </div>
  <% end %>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function(){
    document.getElementById("feedback_title").setAttribute("disabled", true);
  });

</script>